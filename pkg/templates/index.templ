package templates

templ Hello(name string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<link rel="stylesheet" href="/tailwind.css"/>
			<script src="/htmx.min.js"></script>
			<title>Twitter</title>
		</head>
		<body>
			<p class="text-red-500">Hello, { name }!</p>
		</body>
	</html>
}
